{
  "manifest_version": 3,
  "name": "EZ Stream Access",
  "author": "mail@lukasfischer.me",
  "description": "Open your followed twitch channels directly from a popup",
  "homepage_url": "https://github.com/fischi1/ez-stream-access",
  "version": "1.0.0",
  "background": {
    "service_worker": "./background/background.js"
  },
  "action": {
    "default_popup": "./popup/index.html",
    "default_title": "Open EZ Stream Access"
  },
  "permissions": [
    "identity",
    "storage"
  ],
  "icons": {
    "72": "icon-72x72.png",
    "96": "icon-96x96.png",
    "128": "icon-128x128.png",
    "144": "icon-144x144.png",
    "152": "icon-152x152.png"
  }
}