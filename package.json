{
  "name": "ez-stream-access",
  "version": "1.0.0",
  "description": "Access Twitch streams easily",
  "author": "Lukas Fischer <mail@lukasfischer.me>",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rimraf --glob dist ./*.zip ./*.crx",
    "build:chrome": "run-s clean compile build:chrome:*",
    "build:chrome:script": "vite build --config vite.chrome.config.ts",
    "bundle": "run-s bundle:*",
    "bundle:clean": "run-s clean",
    "bundle:chrome": "run-s bundle:chrome:*",
    "bundle:chrome:build": "run-s build:chrome",
    "bundle:chrome:zip": "cd dist && bestzip ../web-extension-chrome-v1.0.0.zip *",
    "compile": "run-s compile:*",
    "compile:tsc": "tsc",
    "compile:vite": "vite build",
    "start": "run-s start:chrome",
    "start:chrome": "run-s build:chrome start:chrome:startBrowser start:chrome:watcher",
    "start:chrome:startBrowser": "node ./scripts/start.js",
    "start:chrome:watcher": "npm run watch:chrome",
    "test": "jest",
    "watch:chrome": "run-p watch:all:* watch:chrome:script",
    "watch:all:web": "npm run compile:vite -- --watch",
    "watch:chrome:script": "sleep 3 && npm run build:chrome:script -- --watch"
  },
  "devDependencies": {
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/webextension-polyfill": "^0.10.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@wdio/browser-runner": "^8.32.3",
    "@wdio/cli": "^8.32.3",
    "@wdio/mocha-framework": "^8.32.3",
    "@wdio/spec-reporter": "^8.32.2",
    "autoprefixer": "^10.4.18",
    "bestzip": "^2.2.1",
    "chrome-launcher": "^1.1.0",
    "clsx": "^2.1.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "react-toastify": "^10.0.4",
    "replace": "^1.2.2",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-jest-mock-import-meta": "^1.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "webextension-polyfill": "^0.10.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
