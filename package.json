{
  "name": "ez-stream-access",
  "version": "1.0.0",
  "description": "Open your followed twitch channels directly from a popup",
  "author": "Lukas Fischer <mail@lukasfischer.me>",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rimraf --glob dist ./*.zip",
    "build": "run-s clean compile",
    "bundle": "node scripts/bundle.js",
    "compile": "run-s tsc compile:*",
    "tsc": "tsc",
    "compile:web": "vite build",
    "compile:background": "vite build --config vite.background.config.ts",
    "start": "npm run build && run-p start:browser watch",
    "start:browser": "node ./scripts/start.js",
    "watch": "run-p \"compile:* -- {@}\" -- --watch",
    "test": "vitest run",
    "preversion": "npm run tsc && npm test",
    "postversion": "npm run bundle"
  },
  "devDependencies": {
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/webextension-polyfill": "^0.10.7",
    "@vitejs/plugin-react": "^4.2.1",
    "adm-zip": "^0.5.10",
    "autoprefixer": "^10.4.18",
    "clsx": "^2.1.0",
    "jsdom": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "react-toastify": "^10.0.4",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1",
    "webdriverio": "^8.32.4",
    "webextension-polyfill": "^0.10.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
